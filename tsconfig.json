{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@types":["interfaces/index"],
      "@lib/*": ["lib/*"],
      "@commands/*": ["commands/*"],
      "@actions/*": ["actions/*"],
      "@ui/*": ["ui/*"],
      "@/*": ["*"]
    }
  },
  "include": ["actions", "bin", "commands", "lib", "tests", "ui", "define-lib-path.ts", "register-paths.ts"],
  "exclude": ["node_modules", "e2e"]
}
